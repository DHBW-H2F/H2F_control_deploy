services:
  grafana:
    container_name: grafana
    image: grafana/grafana
    ports:
      - "3000:3000"
    networks:
      - influxdb
      - grafana
    volumes:
      - "grafana_data:/var/lib/grafana"
      - "{{ ansible_facts.env['PWD'] }}/{{ grafana_folder }}/datasources:/etc/grafana/provisioning/datasources"
      - "{{ ansible_facts.env['PWD'] }}/{{ grafana_folder }}/dashboards:/var/lib/grafana/dashboards"
      - "{{ ansible_facts.env['PWD'] }}/{{ grafana_folder }}/dashboards_provisioning_config:/etc/grafana/provisioning/dashboards"
    user: "1000:1000"
    environment:
      - GF_SECURITY_ALLOW_EMBEDDING=true 
      - GF_AUTH_ANONYMOUS_ENABLED=true
      - GF_AUTH_ANONYMOUS_ORG_NAME=Main Org.
      - GF_AUTH_ANONYMOUS_ORG_ROLE=Viewer
    restart: always

  influxdb:
    container_name: influxdb
    image: influxdb:2
    ports:
      - 8086:8086
    networks:
      - influxdb
    volumes:
      - influx_data:/var/lib/influxdb2
      - influx_config:/etc/influxdb2
    restart: always

networks:
  influxdb:
    name: influxdb
  grafana:
    name: grafana

volumes:
  grafana_data:
  influx_data:
  influx_config:
